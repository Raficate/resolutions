{
  "version": 2,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "api/ssr.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/resolutions/browser"
      }
    }
  ],
  "functions": {
    "api/ssr.ts": {
      "includeFiles": "dist/resolutions/server/**"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)\\.(css|js|png|jpg|ico|svg|txt|webmanifest)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/ssr"
    }
  ]
}
